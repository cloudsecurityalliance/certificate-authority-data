       data-tags="">
    
    <table class="layout-table change-head " id="ch-24" role="presentation">
      <tr>
          <td rowspan="2" class="change-gravatar"><div class="vcard vcard_674574" id="a11549541_661011"><img src="https://secure.gravatar.com/avatar/f6fe3ba50ae93a3c78110fd9ab0abd09?d=mm&size=64" class="gravatar" width="32" height="32">
